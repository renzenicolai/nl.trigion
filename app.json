{
	"id": "nl.trigion",
	"sdk": 2,
	"name": {
		"en": "Trigion"
	},
	"description": {
		"en": "Trigion scheduler",
		"nl": "Trigion alarmwijziging"
	},
	"category": "security",
	"version": "1.0.0",
	"compatibility": ">=1.5.0",
	"author": {
		"name": "Emile Nijssen & Renze Nicolai",
		"email": "emile@athom.nl / renze@athom.nl"
	},
	"images": {
		"large": "./assets/images/large.png",
		"small": "./assets/images/small.png"
	},
	"flow": {
		"triggers": [
			{
				"id": "setpoint_changed",
				"title": {
					"en": "Alarm setpoint changed"
				},
				"tokens": [
				{
					"name": "time",
					"type": "string",
					"title": {
						"en": "Time",
						"nl": "Tijd"
					}
				}]
			}
		],
		"conditions": [
			{
				"id": "alarm_state",
				"title": {
					"en": "Alarm is !{{on|off}}",
					"nl": "Alarm is !{{uit|aan}}"
				}
			},
			{
				"id": "alarm_setpoint_before_relative",
				"title": {
					"en": "Alarm switches on !{{within|after}}...",
					"nl": "Alarm schakelt in !{{binnen|na}}..."
				},
				"args": [
					{
						"name": "time",
						"type": "number",
						"placeholder": {
							"en": "...hours",
							"nl": "...uren"
						}
					}
				]
			}
		],
		"actions": [
			{
				"id": "schedule",
				"title": {
					"en": "Schedule the alarm",
					"nl": "Stel het alarm in"
				},
				"args": [
					{
						"name": "time",
						"type": "time"
					}
				]
			},
			{
				"id": "scheduleRelative",
				"title": {
					"en": "Schedule the alarm # hours from now",
					"nl": "Schakel het alarm # uur vanaf nu in"
				},
				"args": [
					{
						"name": "addHours",
						"type": "number",
						"placeholder": {
							"en": "In hours",
							"nl": "Aantal uur"
						}
					}
				]
			}
		]
	}
}
